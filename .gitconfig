[url "git@github.com:"]
  insteadOf = "gh:"

[url "https://gist.github.com/"]
  insteadOf = "gist:"

[url "git@gitlab.com:"]
  insteadOf = "gl:"

[url "https://gitlab.com/snippets/"]
  insteadOf = "snippet:"

[url "git://git.suckless.org/"]
  insteadOf = "suckless:"

